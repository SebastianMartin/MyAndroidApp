<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="86dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="0dp"
        android:text="The Path Most Trav Elled"
        android:textSize="36sp" />


    <Button
        android:id="@+id/register_btn"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignEnd="@+id/login_btn"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="189dp"
        android:text="Register"
        android:textSize="40sp" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_below="@+id/passwordField"
        android:layout_alignStart="@+id/passwordField"
        android:layout_alignEnd="@+id/passwordField"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:text="Login"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="249dp"
        android:layout_height="56dp"
        android:layout_below="@+id/login_btn"
        android:layout_alignStart="@+id/login_btn"
        android:layout_alignEnd="@+id/login_btn"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="252dp"
        android:editable="false"
        android:gravity="center_vertical|center"
        android:text="Or"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/passwordField"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_below="@+id/usernameField"
        android:layout_alignParentStart="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/usernameField"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/register_btn"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="UserName"
        android:inputType="textPersonName" />



</RelativeLayout>